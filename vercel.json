{
    "functions": {
      "api/**/*.py": {
        "runtime": "python3.8"
      }
    },
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/$1.py"
      },
      {
        "src": "/static/(.*)",
        "dest": "static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "env": {
      "DJANGO_SETTINGS_MODULE": "your_project.settings.production",
      "SECRET_KEY": "your_secret_key",
      "DEBUG": "false",
      "ALLOWED_HOSTS": "*.vercel.app,your-custom-domain.com",
      "DATABASE_URL": "your_database_url"
    },
    "build": {
      "env": {
        "PIPENV_VENV_IN_PROJECT": "1"
      }
    },
    "headers": [
      {
        "source": "/static/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/$1"
      }
    ],
    "trailingSlash": "ignore",
    "cleanUrls": true
  }
  
